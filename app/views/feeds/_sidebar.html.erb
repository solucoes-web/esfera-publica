<div class="list-group">
  <%= link_to new_feed_path, data: {behavior: "modal"}, class: "list-group-item list-group-item-info" do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Feed
  <% end %>
  <%= link_to feeds_path(search: params[:search]), class: "list-group-item  #{active?('all')}" do %>
    <span class="badge">
      <%= @search.count %>
    </span>
    all
  <% end %>
  <% ActsAsTaggableOn::Tag.most_used.each do |tag| %>
    <%= link_to feeds_path(tag: tag.name, search: params[:search]), class: "list-group-item #{active?(tag.name)}" do %>
      <span class="badge">
        <%= @search.tagged_with(tag.name).count %>
      </span>
      <%= tag.name %>
    <% end %>
  <% end %>
</div>
