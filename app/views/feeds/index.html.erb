<div class="page-header">
  <%= link_to new_feed_path, class: 'btn btn-primary', data: {behavior: "modal"} do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Feed
  <% end %>
  <h1>Listing feeds</h1>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <tr>
      <%= content_tag_for(:tr, @feeds) do |feed| %>
      <td>
        <% if feed.favicon %>
          <%= image_tag feed.favicon, height: '16pt', alt: 'favicon' %>
        <% end %>
      </td>
      <td>
        <%= link_to feed.name, feed %>
      </td>
      <td class='edit'>
        <%= link_to edit_feed_path(feed), data: {behavior: "modal"} do %>
          <span class="glyphicon glyphicon-cog"></span>
        <% end %>
      </td>
      <td class="destroy">
        <%= link_to feed, method: :delete, data: {confirm: 'Are you sure?'} do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </td>
      <% end %>
    </tr>
  </table>
</div>
