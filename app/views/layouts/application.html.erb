<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Esfera Pública</title>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Esfera Pública", root_path, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse">
        <!--ul class="nav navbar-nav"-->
          <!--li-->
            <%= link_to items_path do %>
              <button type="button" class="btn btn-default navbar-btn">
                <span class="glyphicon glyphicon-home"></span>
                Itens
              </button>
            <% end %>
          <!--/li-->
          <!--li-->
            <%= link_to feeds_path do %>
              <button type="button" class="btn btn-default navbar-btn">
                <span class="glyphicon glyphicon-cog"></span>
                Feeds
              </button>
            <% end %>
          <!--/li-->
        <!--/ul-->

        <%= form_tag send(@path), :method => 'get', id: "search", class: "navbar-form navbar-left", role: "search" do %>
        <div class="form-group">
          <%= hidden_field_tag :feed, params[:feed] if params[:feed] %>
          <%= hidden_field_tag :tag, params[:tag] if params[:tag] %>
          <%= hidden_field_tag :calendar, params[:calendar] if params[:calendar] %>
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Procurar" %>
        </div>
        <span>
          <button class="btn btn-default" type="submit">
            <span class="glyphicon glyphicon-search"></span>
          </button>
          <%= link_to send(@path, safe_params([:calendar, :feed, :tag], params)), class: "btn btn-default #{"disabled" unless params[:search]}" do %>
          <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </span>
        <% end %>

        <%= form_tag send(@path), :method => 'get', id: "calendar", class: "navbar-form navbar-left", role: "calendar" do %>
        <div class="form-group">
          <%= hidden_field_tag :feed, params[:feed] if params[:feed] %>
          <%= hidden_field_tag :tag, params[:tag] if params[:tag] %>
          <%= hidden_field_tag :search, params[:search] if params[:search] %>
          <%= text_field_tag :calendar, params[:calendar], class: "form-control", id: "calendar-picker", disabled: @path != 'items_path' %>
        </div>
        <span>
          <button class="btn btn-default <%= "disabled" if @path != 'items_path'%>" type="submit">
            <span class="glyphicon glyphicon-calendar"></span>
          </button>
          <%= link_to send(@path, safe_params([:search, :feed, :tag], params)), class: "btn btn-default #{"disabled" unless params[:calendar]}" do %>
          <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </span>
        <% end %>

      </div> <!-- navbar-collapse -->
    </div>
  </nav>

  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, class: "alert alert-#{ name == "error" ? "danger" : "success" } alert-dismissable", role: "alert" do %>
        <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <%= msg %>
      <% end %>
    <% end %>
    <div class="row">
      <div class="col-md-3">
        <div class="list-group" >
          <%= link_to new_feed_path, data: {behavior: "modal"}, class: "list-group-item list-group-item-info" do %>
            <span class="glyphicon glyphicon-plus"></span>
            New Feed
          <% end %>
          <%= link_to send(@path, safe_params([:calendar, :search], params)), class: "list-group-item #{filter_active?('all')}" do %>
            <span class="badge">
              <%= @search.count %>
            </span>
            all
          <% end %>
          <% ActsAsTaggableOn::Tag.most_used.each do |tag| %>
            <%= link_to send(@path, safe_params([:calendar, :search], {tag: tag.name}, params)), class: "list-group-item #{filter_active?(tag.name)}" do %>
              <span class="badge">
                <%= @search.tagged_with(tag.name).count %>
              </span>
              <%= tag.name %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <%= yield %>
      </div>
    </div>
  </div>
  <div id="modal-holder"></div>
</body>
</html>
